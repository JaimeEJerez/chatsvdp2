<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_F2F2F2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/principal_container"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/container_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="0.5dp">

            <ImageView
                android:id="@+id/logo_header_bac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_ellipse_9mini">
            </ImageView>

            <ImageView
                android:id="@+id/logo_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/logo_header_bac"
                android:layout_alignTop="@+id/logo_header_bac"
                android:layout_alignEnd="@+id/logo_header_bac"
                android:layout_alignBottom="@+id/logo_header_bac"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="14dp"
                app:srcCompat="@drawable/ic_logosdvpmini">

            </ImageView>



            <ImageView
                android:id="@+id/logo_header_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_menuhamini">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_header_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"

            android:padding="0.5dp">

            <ImageView
                android:id="@+id/logo_header_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="14dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_arrow_right_4">

            </ImageView>

            <ImageView
                android:id="@+id/logo_header_bac_center"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_ellipse_9mini">
            </ImageView>

            <ImageView
                android:id="@+id/logo_header_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/logo_header_bac_center"
                android:layout_alignTop="@+id/logo_header_bac_center"
                android:layout_alignEnd="@+id/logo_header_bac_center"
                android:layout_alignBottom="@+id/logo_header_bac_center"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="14dp"
                app:srcCompat="@drawable/ic_logosdvpmini">

            </ImageView>

            <ImageView
                android:id="@+id/logo_header_menu_alt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_menuhamini"
                >

            </ImageView>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>